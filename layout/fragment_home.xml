<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="350dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="3dp"
        app:sliderIndicatorSelectedColor="#0B044C"
        app:sliderIndicatorUnselectedColor="@android:color/darker_gray"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"></com.smarteist.autoimageslider.SliderView>

    <TextView
        android:id="@+id/textView2"
        android:layout_marginLeft="20px"
        android:layout_marginTop="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Available Comics"
        android:textColor="#0B044C"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="#0B044C"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>